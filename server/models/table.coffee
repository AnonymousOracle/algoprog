        for table in tables
            wasTables = {}
            newTables = []
            for subTable in table.tables
                if not (subTable of wasTables)
                    wasTables[subTable] = 1
                    _debug_marker = {qwe: '246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246_246'}
